<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job name</th>
      <th>User</th>
      <th>Address</th>
      <th>Salary start</th>
      <th>Salary end</th>
      <th>Work hours</th>
      <th>Job description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_name %></td>
        <td><%= job.user_id %></td>
        <td><%= job.address %></td>
        <td><%= job.salary_start %></td>
        <td><%= job.salary_end %></td>
        <td><%= job.work_hours %></td>
        <td><%= job.job_description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

