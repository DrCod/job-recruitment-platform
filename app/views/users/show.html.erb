<% provide(:title, @user.name) %>
<div class="row">
  <aside >
     <section class ="span4">
        <%= @user.name%>
     </section>
  </aside>

    <div class ="span8">

    <%if @user.microposts.any? %>
      <h3>
        Microposts (<%= @user.microposts.count %>)
      </h3>
      <ol class ="microposts">
         <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>

    <<% end %>>
    </div>
</div>